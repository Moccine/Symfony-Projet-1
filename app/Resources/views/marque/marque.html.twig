{% extends 'main_layout.html.twig' %}
{% block content %}
    {% set marque_name=marque.name %}
    <main class="page-main">
        <div class="block">
            <div class="container">
                <ul class="breadcrumbs">
                    <li><a href="{{ path('homepage') }}">
                            <i class="icon icon-home"></i>
                        </a>
                    </li>
                    <li><a href="{{ path('homepage') }}">
                            Marque
                        </a>
                    </li>
                    <li>/<span>{{ marque_name }}</span></li>
                </ul>
            </div>
        </div>
        <div class="container">
            <!-- Two columns -->
            <div class="row">
                <!-- Left column -->
                <div class="col-md-3 filter-col aside">
                    <div class="fixed-wrapper">
                        <div class="fixed-scroll">
                            <div class="filter-col-content">
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /Left column -->
                <!-- Center column -->
                <div class="col-md-9 aside">
                    <!-- Page Title -->
                    <div class="page-title">
                        <div class="title center">
                            <h1>{{ marque.name }}</h1>
                        </div>
                    </div>
                    <!-- /Page Title -->

                    <!-- Categories Info -->
                    <div class="info-block">
                        <p>{{ marque.description }}</p>
                    </div>
                    <!-- /Categories Info -->

                    <!-- Filter Row -->
                    <div class="filter-row">
                        <div class="row">
                            <div class="col-xs-8 col-sm-7 col-lg-5 col-left">
                                <div class="filter-button">
                                    <a href="#" class="btn filter-col-toggle">
                                        <i class="icon icon-filter"></i>
                                        <span>FILTER</span>
                                    </a>
                                </div>
                                <div class="form-label">Sort by:</div>
                                <div class="select-wrapper-sm">
                                    <label>
                                        <select class="form-control input-sm">
                                            <option value="featured">Featured</option>
                                            <option value="rating">Rating</option>
                                            <option value="price">Price</option>
                                        </select>
                                    </label>
                                </div>
                                <div class="directions">
                                    <a href="#"><i class="icon icon-arrow-down"></i></a>
                                    <a href="#"><i class="icon icon-arrow-up"></i></a>
                                </div>
                            </div>
                            <div class="col-sm-2 col-lg-2 hidden-xs">
                                <div class="view-mode">
                                    <a href="#" class="grid-view"><i class="icon icon-th"></i></a>
                                    <a href="#" class="list-view"><i class="icon icon-th-list"></i></a>
                                </div>
                            </div>
                            <div class="col-xs-4 col-sm-3 col-lg-5 col-right">
                                <div class="form-label">Show:</div>
                                <div class="select-wrapper-sm">
                                    <label>
                                        <select class="form-control input-sm">
                                            <option value="featured" data-href=" {{ path('marque_show', {'slug': marque.slug, 'page': page, 'limit': 12})  }}">12</option>
                                            <option value="rating">36</option>
                                            <option value="price">100</option>
                                        </select>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="bg-striped"></div>
                    </div>
                    <!-- /Filter Row -->
                    <!-- Total -->
                    <div class="items-total">Items {{ page }} to {{ page * 5 }} of {{ maxPages *5}} total</div>
                    <!-- /Total -->
                    <ul class="pagination pagination-sm">
                        <li {{ page==1 ? 'class="disable"' }}>
                            <a href="{{ path('marque_show', {'slug': marque.slug, 'page': page-1 <1? 1 : page}) }}">
                                << </a>
                        </li>
                        {% for i in 1..maxPages %}
                            <li {{ page==i ? 'class="active"' }}>
                                <a href="{{ path('marque_show', {'slug': marque.slug, 'page': i}) }}">{{ i }}</a>
                            </li>
                        {% endfor %}
                        <li {{ page==1 ? 'class="disable"' }}>
                            <a href="{{ path('marque_show', {'slug': marque.slug, 'page': page+1 > maxPages? 1 : page}) }}">
                                >>
                            </a>
                        </li>
                    </ul>
                    <!-- Products Grid -->
                    <div class="products-grid four-in-row product-variant-3">

                        <!-- Product Item -->

                        {% for product in products %}
                            <div class="product-item large">
                                <div class="product-item-inside">
                                    <!-- Product Label -->
                                    <div class="product-item-label label-new"><span>New</span></div>
                                    <div class="product-item-label label-sale"><span>-20%</span></div>
                                    <!-- /Product Label -->
                                    <div class="product-item-info">
                                        <!-- Product Photo -->
                                        <div class="product-item-photo">
                                            <!-- product inside carousel -->
                                            <div class="carousel-inside fade" data-ride="carousel">
                                                <div class="carousel-inner">
                                                    <div class="item active">
                                                        <a href="{{ path('single_product',{'id': product.id} ) }}">
                                                            <img class="product-image-photo"
                                                                 src="{{ asset('Assets/images/template_images/images/products/product-11.jpg') }}"
                                                                 alt="">
                                                        </a>
                                                    </div>
                                                    <div class="item">
                                                        <a href="{{ path('single_product',{'id': product.id} ) }}">
                                                            <img class="product-image-photo"
                                                                 src="{{ asset('Assets/images/template_images/images/products/product-11-1.jpg') }}"
                                                                 alt="">
                                                        </a>
                                                    </div>
                                                    <div class="item">
                                                        <a href="{{ path('single_product',{'id': product.id} ) }}">
                                                            <img class="product-image-photo"
                                                                 src="{{ asset('Assets/images/template_images/images/products/product-11-2.jpg') }}"
                                                                 alt="">
                                                        </a>
                                                    </div>
                                                    <div class="item">
                                                        <a href="{{ path('single_product',{'id': product.id} ) }}">
                                                            <img class="product-image-photo"
                                                                 src="{{ asset('Assets/images/template_images/images/products/product-11-3.jpg') }}"
                                                                 alt="">
                                                        </a>
                                                    </div>
                                                </div>
                                                <a class="carousel-control next"></a>
                                                <a class="carousel-control prev"></a>
                                            </div>
                                            <!-- /product inside carousel -->
                                            <!-- Product Actions -->
                                            <div class="product-item-actions">
                                                <div class="actions-primary">
                                                    <a href="{{ path('add_to_cart', {'new_id': product.id}) }}"
                                                       class="btn btn-sm btn-invert add-to-cart"><i
                                                                class="icon icon-cart"></i><span>Ajouter</span>
                                                    </a>
                                                </div>
                                                <div class="actions-secondary">
                                                    <a href="#" class="sharing" title="Link"> <i
                                                                class="icon icon-share"></i> </a>
                                                    <a href="{{ path('product_quickView') }}" class="quick-view-link"
                                                       title="Quick View">
                                                        <i class="icon icon-eye"></i>
                                                    </a>
                                                    <a href="#" title="Compare">
                                                        <i class="icon icon-balance"></i>
                                                    </a>
                                                    <a href="#" title="Wish List" class="wishlist active">
                                                        <i class="icon icon-heart"></i>
                                                    </a>
                                                </div>
                                                <ul class="social-list">
                                                    <li>
                                                        <a href="#" class="icon icon-google google"></a>
                                                    </li>
                                                    <li>
                                                        <a href="#" class="icon icon-fancy fancy"></a>
                                                    </li>
                                                    <li>
                                                        <a href="#" class="icon icon-pinterest pinterest"></a>
                                                    </li>
                                                    <li>
                                                        <a href="#" class="icon icon-twitter-logo twitter"></a>
                                                    </li>
                                                    <li>
                                                        <a href="#" class="icon icon-facebook-logo facebook"></a>
                                                    </li>
                                                </ul>
                                            </div>
                                            <!-- /Product Actions -->
                                        </div>
                                        <!-- /Product Photo -->
                                        <!-- Product Details -->
                                        <div class="product-item-details">
                                            <div class="product-item-name"><a
                                                        title="{{ marque.name }}- {{ product.name }}"
                                                        href="{{ path('single_product', {'id': product.id}) }}"
                                                        class="product-item-link">{{ product.name }}</a>
                                            </div>
                                            <div class="product-item-description">{{ product.description }}
                                            </div>
                                            <div class="price-box">
                                                {% if  product.pricesttchortcut != 0%}{# si prix est defini afficher le prix#}
                                                <span class="price-container">
                                                    <span class="price-wrapper">
                                                        <span class="old-price">{{ currency['symbol-currency'] }}{{ product.pricesttchortcut }}</span>
                                                        <span class="special-price">{{ currency['symbol-currency'] }}{{ product.pricesttchortcut }}</span>
                                                    </span>
												</span>
                                                {% endif %}
                                            </div>
                                            <!-- Product Actions -->
                                            <div class="product-item-actions">
                                                {% if  product.pricesttchortcut != 0%}{# si prix est defini afficher le prix#}
                                                <div class="actions-primary">
                                                    <button class="btn btn-sm btn-invert add-to-cart"
                                                            data-product="789123">
                                                        <i class="icon icon-cart"></i>
                                                        <span>Ajouter</span>
                                                    </button>
                                                </div>
                                                {% endif %}
                                            </div>
                                            <!-- /Product Actions -->
                                        </div>
                                        <!-- /Product Details -->
                                    </div>
                                </div>
                            </div>
                            <!-- /Product Item -->
                        {% endfor %}

                    </div>
                    <!-- /Products Grid -->
                    <!-- Filter Row -->
                    <div class="filter-row">
                        <div class="row">
                            <div class="col-xs-8 col-sm-7 col-lg-5 col-left">
                                <div class="filter-button">
                                    <a href="#" class="btn filter-col-toggle">
                                        <i class="icon icon-filter"></i>
                                        <span>FILTER</span>
                                    </a>
                                </div>
                                <div class="form-label">Sort by:</div>
                                <div class="select-wrapper-sm">
                                    <label>
                                        <select class="form-control input-sm">
                                            <option value="featured">Featured</option>
                                            <option value="rating">Rating</option>
                                            <option value="price">Price</option>
                                        </select>
                                    </label>
                                </div>
                                <div class="directions">
                                    <a href="#"><i class="icon icon-arrow-down"></i></a>
                                    <a href="#"><i class="icon icon-arrow-up"></i></a>
                                </div>
                            </div>
                            <div class="col-sm-2 col-lg-2 hidden-xs">
                                <div class="view-mode">
                                    <a href="#" class="grid-view"><i class="icon icon-th"></i></a>
                                    <a href="#" class="list-view"><i class="icon icon-th-list"></i></a>
                                </div>
                            </div>
                            <div class="col-xs-4 col-sm-3 col-lg-5 col-right">
                                <div class="form-label">Voir:</div>
                                <div class="select-wrapper-sm">
                                    <label>
                                        <select class="form-control input-sm show">
                                            <option value="12">12</option>
                                            <option value="36">36</option>
                                            <option value="100">100</option>
                                        </select>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /Filter Row -->
                    <!-- Total -->
                    <div class="items-total">Items 1 to 15 of 28 total</div>
                    <!-- /Total -->
                </div>
                <!-- /Center column -->
            </div>
            <!-- /Two columns -->
        </div>
    </main>

{% endblock %}
{% block javascriptCustom %}
    <script src="{{ asset('Assets/js/header.js') }}"></script>
{% endblock %}