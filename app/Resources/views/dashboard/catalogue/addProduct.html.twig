{% extends 'admin_main_layout.html.twig' %}
{% block content %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Ajouter des produits</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}


        <div class="row pull-right">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#home">Essentiel</a></li>
                <li><a data-toggle="tab" href="#menu1">Quantités</a></li>
                <li><a data-toggle="tab" href="#menu2">Livraison</a></li>
                <li><a data-toggle="tab" href="#menu3">Prix</a></li>
                <li><a data-toggle="tab" href="#menu4">Referencement</a></li>
                <li><a data-toggle="tab" href="#menu5">Options</a></li>
            </ul>
        </div>

        <div class="tab-content">
            <div id="home" class="tab-pane fade in active">
                <h3>Ajout simplifié</h3>
                <hr/>
                {{ include('dashboard/catalogue/layouts/essential.html.twig') }}
            </div>
            <div id="menu1" class="tab-pane fade">
                <h3>Quantité</h3>
                <hr/>
                {{ include('dashboard/catalogue/layouts/quantity.html.twig') }}

            </div>
            <div id="menu2" class="tab-pane fade">
                <h3>Livraison</h3>
                <hr/>
                {{ include('dashboard/catalogue/layouts/carrier.html.twig') }}

            </div>
            <div id="menu3" class="tab-pane fade">
                <h3>Prix</h3>
                <hr/>
                {{ include('dashboard/catalogue/layouts/price.html.twig') }}
            </div>
            <div id="menu4" class="tab-pane fade">
                <h3>Referencement</h3>
                <hr/>
                {{ include('dashboard/catalogue/layouts/referencement.html.twig') }}
            </div>
            <div id="menu5" class="tab-pane fade">
                <h3>Options</h3>
                <hr/>
                {{ include('dashboard/catalogue/layouts/options.html.twig') }}
            </div>
    <div class="row " id="submit-button">
        <div class="col-lg-2">
            <button type="reset" class="btn btn-block btn-warning">reset</button>
        </div>
        <div class="col-lg-6">
            <button type="submit" class="btn btn-block btn-primary">valider</button>
        </div>

    </div>
    {{ form_row(form._token) }}
    {{ form_end(form) }}

    </div>


{% endblock %}
{% block javascript_admin %}
    <script src="{{ asset('Assets/ckeditor/ckeditor.js') }}"></script>
    <script src="{{ asset('Assets/js/image_form.js') }}"></script>
    <script src="{{ asset('libariries/datapicker/css/bootstrap-datepicker.css') }}"></script>
    <script src="{{ asset('libariries/datapicker/js/bootstrap-datepicker.js') }}"></script>
    <script>
        $("#submit-button").css({});
         $(document).ready(function() {
        // configure the bootstrap datepicker
        $('.js-datepicker').datepicker({
            format: 'yyyy-mm-dd'
        });
    });
    </script>
{% endblock %}