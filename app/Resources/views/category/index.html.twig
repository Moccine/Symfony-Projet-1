{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        <h1 class="text-center">Categories list</h1>
        <hr>
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                            <td>{{ category.name }}</td>
                            <td>
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="{{ path('category_show', { 'id': category.id }) }}"><i
                                                    class="fa fa-eye"></i> </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('category_edit', { 'id': category.id }) }}"><i
                                                    class="fa fa-edit"></i> </a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <ul class="list-unstyled">
                <li>
                    <a href="{{ path('category_new') }}">Create a new category</a>
                </li>
            </ul>
        </div>

    </div>

{% endblock %}
